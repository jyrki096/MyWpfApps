<Window x:Class="DesktopContactsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="250">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Добавить новый контакт" Click="Button_Click"/>
            <TextBox Margin="0 5 0 5" TextChanged="TextBox_TextChanged"/>
            <ListView Margin="0 5 0 0" 
                      x:Name="contactsListView" 
                      Height="180"
                      SelectionChanged="contactsListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Email}" FontSize="15" Foreground="DodgerBlue"/>
                            <TextBlock Text="{Binding PhoneNumber}" FontSize="15" FontStyle="Italic"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
